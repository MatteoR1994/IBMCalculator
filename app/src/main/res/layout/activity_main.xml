<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pesoKgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/defaultMargin"
        android:digits="0123456789."
        android:ems="10"
        android:hint="@string/hintPeso"
        android:inputType="number" />

    <EditText
        android:id="@+id/altezzaMetriText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/defaultMargin"
        android:digits="0123456789."
        android:ems="10"
        android:hint="@string/hintAltezza"
        android:inputType="number" />

    <Button
        android:id="@+id/calculateIBMBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="@string/calculateIBMButtonText"
        android:onClick="calcolaBMI"
        app:backgroundTint="@color/calculateButtonColor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/resultIntro"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="80sp"
        tools:text="5" />

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/extremely_obese" />

</LinearLayout>